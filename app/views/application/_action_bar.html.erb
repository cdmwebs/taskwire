<div class="absolute bottom-12 left-0 right-0 flex flex-row justify-center">
  <div class="action-bar" data-action-bar-target="bar">
    <%= button_to(batch_destroy_tasks_path, method: :delete, data: { 'action': 'action-bar#deleteTasks' }) do %>
      <%= hidden_field_tag :ids, '', data: { 'action-bar-target': 'taskIds' } %>
      <%= heroicon "trash" %>
      <span data-action-bar-target="deleteButtonLabel"></span>
    <% end %>

    <button>
      <%= heroicon "arrow-circle-right" %>
      <span>Move (0)</span>
    </button>
  </div>
</div>
